
{
  "manifest_version": 3,
  "name": "在线音乐电台",
  "version": "1.0",
  "description": "实时播放在线 MP3 音频流",
  "permissions": ["activeTab", "offscreen", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-radio": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "快捷开启/关闭电台"
    }
  },
  "icons": {
    "128": "fmicon.png"
  }
}

